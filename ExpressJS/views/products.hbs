{{#if products}}
    {{#each products}}
        {{>product}}
    {{/each}}
{{else}}
    <p>There are no products.</p>
{{/if}}

<form method="post">
    <label for="name">Name</label>
    <input type="text" name="name" id="name">
    <br>
    <label for="age">Age</label>
    <input type="number" name="age" id="age">
    <br>
    <input type="submit" value="Add Product">
</form>